
<section class="ui segment">
    <div class="ui four small statistics">
        <div class="ui statistic">
            <div class="value">
                <i class="{{assessments}} calendar check icon"></i>
            </div>
            <div class="label">
                Assessments
            </div>
        </div>
</section>

    <section class="ui raised segment">
    <table class="ui fixed table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Weigth</th>
      <th>Chest</th>
      <th>Thigh</th>
      <th>Upper Arm</th>
      <th>Waist</th>
      <th>Hips</th>
      <th>Trend</th>
      <th>Comment</th>
      <th>Goal</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each assessments}}
      <tr>
        <td>
          {{date}}
      </td>
      <td>
        {{weigth}}
      </td>
      <td>
        {{chest}}
      </td>
      <td>
        {{thigh}}
      </td>
      <td>
        {{upperArm}}
      </td>
      <td>
        {{waist}}
      </td>
      <td>
        {{hips}}
      </td>
          <td>
              <i><a class="ui {{trend}} tag label"></a></i>
          </td>
        <td>
          {{comment}}
          <td>
        </td>
        <td>
          <a href="/dashboard/deleteAssessment/{{id}}">
            <i class="ui red large trash alternate icon"></i>
          </a>
        </td>
      </tr>
      {{/each}}
  </tbody>
    </table>


</section>
